{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "PATCH",
                "OPTIONS"
            ],
            "headers": {
                 "Access-Control-Allow-Origin": "https://your-frontend-domain.vercel.app",
                 "Access-Control-Allow-Credentials": "true",
                 "Access-Control-Allow-Headers": "Authorization, Content-Type, Accept"
             }
        }
    ]
}